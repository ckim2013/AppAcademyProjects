<!DOCTYPE html>
<html>
  <head>
    <title>Chris' Goal App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

<h1>Chris' Goal App!!!!!</h1>

<% if logged_in? %>
  <h3>Welcome <%= current_user.username %></h3>
  <%= button_to "Log Out", session_url, method: :delete %>
<% end %>

<% flash[:errors].try(:each) do |error| %>
  <%= error %>
<% end %>

  <body>
    <%= yield %>
  </body>
</html>
